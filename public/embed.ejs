<!DOCTYPE HTML>
<html>

<head>
    <link href="/css/video-js.css" rel="stylesheet">
    <link href="/css/videojs.logobrand.css" rel="stylesheet">
    <link rel="shortcut icon" href="/favicon.png">

  <title>
    AngelThump
  </title>

  <style type="text/css"> 
  html {
    margin: 0;
    padding: 0;
    background: #000000;
    overflow: hidden;
  }
  
  #yee {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
  }
  
  .video-js.vjs-playing .vjs-tech {
    pointer-events: none;
  }
  
  .vjs-fullscreen.vjs-user-inactive {
    cursor: none;
  }
  
  </style>
  
</head>

<body>

  <video id=yee class="video-js vjs-default-skin" autoplay controls preload="auto">
</video>
  <script src="/js/video.js"></script>
  <script src="/js/videojs5-hlsjs-source-handler.js"></script>
  <script src="/js/videojs.logobrand.js"></script>
  <script src="/js/videojs-persistvolume.js"></script>
  <script>
    var channel = "<%= username %>";

  var sources = 
    [
      {type:"application/x-mpegURL", src: "http://cdn.angelthump.com/hls/" + channel + ".m3u8"}
    ];


    var options = {
        html5: {
            hlsjsConfig: {
                debug: false
            }
        }
    };

    var player = videojs('yee', options);
    player.src(sources);
    player.qualityPickerPlugin();

    player.on("pause", function () {
      player.reset();
      player.one("play", function () {
        player.src(sources);
      });
    }); 


  player.poster('http://angelthump.com/default_offline.jpg');

    player.logobrand({
         image: "//angelthump.com/picdonate.png",
         destination: "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=3VKPL7E8RSL38"});
  
    var requestTime = 1000;
    function retry() {
    setTimeout(function() {
        player.src(sources);

        if(requestTime < 16000) {
        requestTime = requestTime * 2;
        }
        running = false;

    }, requestTime);
    }

    var running = false;
    

    player.on('error', function(e) {
    if (player.error().code == 2) {
        player.error(null);
        if(!running) {
          retry();
          running = true;
        }
      }
    })
    
    player.persistvolume({
       namespace: "YEE boi"
    });
  </script>


</body>

</html>